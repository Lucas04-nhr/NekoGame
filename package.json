{
  "name": "nekogame",
  "version": "2.4.1",
  "main": "src/main.js",
  "description": "summerneko",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "start:win": "chcp 65001 && electron .",
    "build": "electron-builder",
    "build:win": "set NODE_TLS_REJECT_UNAUTHORIZED=0 && electron-builder --win",
    "build:mac": "export CSC_IDENTITY_AUTO_DISCOVERY=false && export NODE_TLS_REJECT_UNAUTHORIZED=0 && electron-builder --mac -c.mac.identity=null"
  },
  "keywords": [],
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "better-sqlite3": "^11.5.0",
    "chart.js": "^4.4.6",
    "cheerio": "^1.0.0",
    "dayjs": "^1.11.13",
    "echarts": "^5.6.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "exceljs": "^4.4.0",
    "fs-extra": "^11.2.0",
    "iconv-lite": "^0.6.3",
    "node-fetch": "^3.3.2",
    "ps-node": "^0.1.6",
    "qs": "^6.13.0",
    "sqlite3": "^5.1.7",
    "swiper": "^11.1.15",
    "ws": "^8.18.0"
  },
  "optionalDependencies": {
    "winreg": "^1.2.5"
  },
  "build": {
    "appId": "com.wenpeng.nekogame",
    "productName": "NekoGame",
    "copyright": "Copyright Â© 2023",
    "releaseInfo": {
      "releaseNotesFile": "release-notes.md"
    },
    "extraMetadata": {
      "version": "2.4.1"
    },
    "files": [
      "assets/**/*",
      "src/**/*",
      "css/**/*",
      "js/**/*",
      "node_modules/**/*",
      "pages/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Summer-Neko",
        "repo": "NekoGame"
      }
    ]
  }
}
