{
  "name": "nekogame",
  "version": "2.1.7",
  "main": "main.js",
  "description": "summerneko",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "dayjs": "^1.11.13",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.wenpeng.nekogame",
    "productName": "NekoGame",
    "copyright": "Copyright Â© 2023",
    "releaseInfo": {
        "releaseNotesFile": "release-notes.md"
    },
    "extraMetadata": {
      "version": "2.1.7"
    },
    "files": [
      "assets/**/*",
      "css/**/*",
      "js/**/*",
      "node_modules/**/*",
      "pages/**/*",
      "*.js",
      "index.html",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Summer-Neko",
        "repo": "NekoGame"
      }
    ]
  }
}
